# Omni-Revenue-Agent Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================
# DATABASE
# ============================================================
DATABASE_URL="postgresql://postgres:your-password@your-project.supabase.co:5432/postgres"

# ============================================================
# FLASK API
# ============================================================
SECRET_KEY="your-secret-key-change-in-production"
FLASK_ENV="development"  # or "production"
PORT=5000

# ============================================================
# STRIPE
# ============================================================
STRIPE_SECRET_KEY="sk_test_xxxxx"  # Use sk_live_xxxxx in production
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"  # Use pk_live_xxxxx in production
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# ============================================================
# PAYPAL
# ============================================================
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox"  # or "live" in production

# ============================================================
# LLM & AI SERVICES
# ============================================================
OPENROUTER_API_KEY="sk-or-xxxxx"
COHERE_API_KEY="your-cohere-api-key"
OPENAI_API_KEY="sk-xxxxx"  # If using OpenAI directly

# ============================================================
# CONTENT GENERATION
# ============================================================
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
INVIDEO_API_KEY="your-invideo-api-key"

# ============================================================
# DATA & INTELLIGENCE
# ============================================================
POLYGON_API_KEY="your-polygon-api-key"
FIRECRAWL_API_KEY="your-firecrawl-api-key"
EXPLORIUM_API_KEY="your-explorium-api-key"

# ============================================================
# PRODUCTIVITY & CRM
# ============================================================
NOTION_API_KEY="secret_xxxxx"
NOTION_CRM_DATABASE_ID="your-notion-database-id"
LINEAR_API_KEY="lin_api_xxxxx"
LINEAR_TEAM_ID="your-linear-team-id"

# ============================================================
# MONITORING & OBSERVABILITY
# ============================================================
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
ENVIRONMENT="development"  # or "production"
RELEASE="1.0.0"

# ============================================================
# CLOUDFLARE
# ============================================================
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-zone-id"

# ============================================================
# DEPLOYMENT
# ============================================================
BASE_URL="http://localhost:3000"  # Frontend URL
API_URL="http://localhost:5000"   # Backend API URL

# In production:
# BASE_URL="https://copykit.io"
# API_URL="https://api.copykit.io"

